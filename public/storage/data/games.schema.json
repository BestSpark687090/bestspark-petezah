{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Games.json schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Optional schema identifier for this document",
      "pattern": "^(https?:\\/\\/[^\\s]+|(?:\\.{1,2}\\/).*|\\/.*)$"
    },
    "games": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "description": "Display name of the game entry"
          },
          "url": {
            "type": "string",
            "description": "Link to the game or form",
            "pattern": "^(https?:\\/\\/[^\\s]+|(?:\\.{1,2}\\/).*|\\/.*)$"
          },
          "imageUrl": {
            "type": "string",
            "description": "Path or URL to the image thumbnail",
            "pattern": "^(https?:\\/\\/[^\\s]+|(?:\\.{1,2}\\/).*|\\/.*)$"
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["action", "racing", "strategy", "sports", "skill", "shooting", "2 player", "io"]
            },
            "description": "Categories assigned to the game",
            "minItems": 0
          },
          "featured": {
            "type": "boolean",
            "description": "Whether the game is featured or not",
            "default": false
          }
        },
        "required": ["label", "url", "imageUrl", "categories"],
        "additionalProperties": false
      }
    }
  },
  "required": ["games"],
  "additionalProperties": false
}
