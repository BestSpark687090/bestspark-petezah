---
const count = 40;

const particles = Array.from({ length: count }, () => ({
  left: Math.random() * 100,
  top: Math.random() * 100,
  delay: Math.random() * 10,
  duration: 5 + Math.random() * 10
}));
---

{
  particles.map((p) => (
    <div class="particle" style={`left:${p.left}vw; top:${p.top}vh; animation-delay:${p.delay}s; animation-duration:${p.duration}s`} />
  ))
}
